<script type="text/javascript">
$(document).ready(cuntion(){
	
	$("#_btnlogin").click(){
		let id = $("#_userid").val();
		let pwd = $("#_userpwd")
			
		$.ajax({
			url:http:localhost:3000/login,
			type:'post',
			data: {id:id, pwd:pwd}
			success:function(data){
				alert("seuccess");
			},
			error:function(){
				alert('error');
			}
		});
	}
});

</script>

